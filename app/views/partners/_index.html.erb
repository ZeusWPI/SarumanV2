<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% partners.each do |p| %>
      <tr>
        <td><%= link_to p.name, p %></td>
        <td>
          <%= link_to edit_partner_path(p), class: 'button is-small is-outlined' do %>
            <span class='icon is-small'>
              <i class='fa fa-edit'></i>
            </span>
          <% end %>
          <%= link_to p, method: :delete, class: 'button is-small is-danger is-outlined' do %>
            <span class='icon is-small'>
              <i class='fa fa-times'></i>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
