<%= form_for @category do |f| %>
  <%= render 'errors', object: @category %>

  <div class='field'>
    <label class='label'>Name</label>
    <div class='control'>
      <%= f.text_field :name, class: 'input' %>
    </div>
  </div>

  <div class='field'>
    <label class='label'>Deadline</label>
    <div class='control'>
      <%= f.date_field :deadline, class: 'input' %>
    </div>
  </div>

  <div class='control'>
    <%= f.submit :create, class: 'button is-info' %>
  </div>
<% end %>
