<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |i| %>
      <tr>
        <td><%= link_to i.name, i %></td>
        <td>
          <%= link_to edit_available_path(i), class: 'button is-small is-outlined' do %>
            <span class='icon is-small'>
              <i class='fa fa-edit'></i>
            </span>
          <% end %>
          <%= link_to i, method: :delete, class: 'button is-small is-danger is-outlined' do %>
            <span class='icon is-small'>
              <i class='fa fa-times'></i>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
