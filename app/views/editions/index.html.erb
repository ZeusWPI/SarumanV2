<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @editions.each do |e| %>
      <tr>
        <td><%= link_to e.name, e %></td>
        <td>
          <%= link_to edit_edition_path(e), class: 'button is-small is-outlined' do %>
            <span class='icon is-small'>
              <i class='fa fa-edit'></i>
            </span>
          <% end %>
          <%= link_to e, method: :delete, class: 'button is-small is-danger is-outlined' do %>
            <span class='icon is-small'>
              <i class='fa fa-times'></i>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
